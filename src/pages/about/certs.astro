        </ul>
    </ResponsiveMain>
</Layout>

<style>
    .badge-block {
        max-width: 30ch;
    }

    .badge-list {
        display: flex;
        flex-flow: row nowrap;
        gap: 1rem;

        justify-content: space-evenly;
        align-items: stretch;

        margin: 0;
        padding: .5rem 0;

        height: max-content;
        width: 100%;

        overflow-x: scroll;

        list-style: none;

        & > li {
            position: relative;

            display: flex;
            flex-flow: column nowrap;
            justify-content: space-between;
            gap: 2rem;
            overflow: hidden;

            padding: .75rem;
            
            width: 14rem;
            min-width: 14rem;
            max-width: 14rem;
            height: max(max-content, 100%);
            box-sizing: border-box;

            border: 1px solid #fff0;

            background-color: #fff1;
            backdrop-filter: blur(5rem);
            border-radius: .5rem;

            transition: border-color .5s linear;

            & > figure {
                width: 100%;
                height: fit-content;

                margin: 0;

                & > img {
                    width: calc(100% - 2rem);
                    height: auto;
                    box-sizing: border-box;

                    margin: 1rem;
                    margin-bottom: .5rem;
                }

                & > figcaption {
                    padding-inline: 1rem;

                    text-align: center;
                    
                    font-size: 1.25rem;
                    color: #fff;
                }

            }

            & > div > a {
                display: flex;
                justify-content: center;
                align-items: center;
                flex-flow: row wrap;

                gap: .5ch;

                padding: .75rem;

                width: 100%;
                height: fit-content;
                box-sizing: border-box;

                background-color: var(--blue-100);
                
                font-size: 1.125rem;
                color: var(--blue-800);
                text-decoration: none;

                box-shadow: 0 0 8rem 0 transparent;

                transition: box-shadow .5s cubic-bezier(0.075, 0.82, 0.165, 1);

                &:hover {
                    box-shadow: 0 0 8rem 0 var(--blue-100);

                    transition: box-shadow .3s cubic-bezier(0.075, 0.82, 0.165, 1);
                }
            }

            &::before {
                content: '';

                position: absolute;
                top: -50%;
                left: 50%;
                transform: translate(-50%, -50%);
                
                width: 100%;
                height: 50%;

                border-radius: 50%;
                
                filter: blur(16rem);
                
                transition: background-color 1.75s cubic-bezier(0.075, 0.82, 0.165, 1),
                            top 1.5s cubic-bezier(0.075, 0.82, 0.165, 1)
            }
            
            &:hover {
                border: 1px solid #fff1;

                transition: border-color .3s linear;

                &::before {
                    top: 0;
                    background-color: color-mix(in srgb, transparent 50%, var(--blue-100));

                    transition: background-color .75s cubic-bezier(0.075, 0.82, 0.165, 1),
                                top .5s cubic-bezier(0.075, 0.82, 0.165, 1);
                }
            }

            &:has(a:hover) {
                border-color: color-mix(in srgb, #fff1 85%, var(--blue-100));

                transition: border-color .1s linear;
            }
        }
    }

    .flex-block-list {
        display: flex;
        flex-flow: row wrap;
        gap: 1rem;

        padding-inline: 1rem;

        color: var(--blue-100);
        font-weight: bold;

        & > li {
            
            padding-inline: .5em;
            padding-block: .25em .75em;
            
            flex-grow: 1;
            
            list-style: none;
            background-color: #fff1;
            border-radius: .8rem;
            
            & > h3 {
                margin-block: .2rem .5rem;
            }

            & ul {
                padding-left: 1.25em;

                list-style: disc;
                
                color: #fff;
                font-weight: normal;
            }
        }
    }
</style>